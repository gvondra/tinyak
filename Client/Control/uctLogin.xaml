<UserControl x:Class="uctLogin"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:tinyak.Client"
             mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="300" HorizontalAlignment="Left">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto"/>
            <ColumnDefinition Width="5"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        <TextBlock Grid.Column="0" Grid.Row="0">Email Address:</TextBlock>
        <TextBox Grid.Column="2" Grid.Row="0" Name="txtEmailAddress" MaxLength="255" HorizontalAlignment="Left" MinWidth="100"/>
        <TextBlock Grid.Column="0" Grid.Row="1">Password:</TextBlock>
        <PasswordBox Grid.Column="2" Grid.Row="1" Name="txtPassword" HorizontalAlignment="Left" MinWidth="100"/>
        <Button Grid.Column="2" Grid.Row="2" Name="btnLogin" HorizontalAlignment="Left" IsDefault="True" >Login</Button>
    </Grid>
</UserControl>
